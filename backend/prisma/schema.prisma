generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        Int       @id @default(autoincrement())
  nome      String
  email     String    @unique
  senha     String
  plantas   Planta[]
  chats     ChatIA[]
  criadoEm  DateTime  @default(now())
}

model Especie {
  id        Int       @id @default(autoincrement())
  nome      String   
  resumo    String? 
  descricao String?
  cuidados  String?   
  imagem    String?  // o ? indica que não é not null
  plantas   Planta[]
  rotinas   Rotina[]  
}

model Planta {
  id        Int       @id @default(autoincrement())
  apelido   String?   
  criadoEm  DateTime  @default(now())
  ambiente  String
  userId    Int
  user      User      @relation(fields: [userId], references: [id])
  especieId Int
  especie   Especie   @relation(fields: [especieId], references: [id])
}

model Rotina {
  id          Int      @id @default(autoincrement())
  tipoCuidado String   
  frequencia  String?
  observacao  String?
  ambiente    String   
  especieId   Int
  especie     Especie  @relation(fields: [especieId], references: [id])
}


model ChatIA {
  id        Int      @id @default(autoincrement())
  mensagem  String
  imagemUrl String?  
  criadoEm  DateTime @default(now())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
}
